String Failed Failed = "*** JAPI2 couldn't start ***"
String NotFound NotFound = "*** JAPI2 Library not found ***"
--------------------------------------------------------------------------------
--
--=== Routines
--
--------------------------------------------------------------------------------
procedure go(Japi j)
    JObject event
    JFrame jframe
    JLabel jlabel
    JBorderpanel jpanel
    if j.start() then
        jframe = JFrame("JBorderpanel Demo")
        jframe.setBackColour(220, 220, 220)
        jframe.setLayout(1, 4)
        jframe.setHgap(10)
        jpanel = JBorderpanel(jframe, J_LINEDOWN)
        jlabel = JLabel(jpanel, "LINEDOWN")
        jpanel.setLayout(J_HORIZONTAL)
        jpanel = JBorderpanel(jframe, J_AREADOWN)
        jlabel = JLabel(jpanel, "AREADOWN")
        jpanel = JBorderpanel(jframe, J_AREAUP)
        jlabel = JLabel(jpanel, "AREAUP")
        jframe.show()
        event = 0
        while event != jframe do
            event = event.next()
        end while
        j.quit()
    else Failed.show(LF)
    end if
end procedure
--------------------------------------------------------------------------------
procedure main()
    Japi japi2
    japi2 = Japi("\\dll\\32\\japi2.dll")
    if japi2 then go(japi2)
    else NotFound.show(LF)
    end if
end procedure
